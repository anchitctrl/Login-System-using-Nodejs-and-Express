<%- include('header') -%>

    <!-- <h2>Login System</h2> -->

    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-4">
                <h2 class="font-weight-bold text-white">
                    Login System
                </h2>
                <span class="text-light">Login for the existing User</span>
                <% if(locals.logout){ %>
                    <div class="alter alert-success text-center">
                        <%= logout %>
                        </div>
                    <%
                }%>
            </div>
            <form action="/route/login" method=POST class="pt-3">
                <div class="form-group pb-4">
                    <input type="email" class="form-control" placeholder="Email" name="email">
                    <small class="form-text text-left text-muted ">Registered Email address</small>
                </div>
                <div class="form-group pb-4">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill"> Submit</button>
            </form>
        </div>
    </div>



    <%- include('footer') -%>